<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>preview</LangVersion>
        <Version>0.3.0-dev11261713</Version>
        <Title>Snapshot Expert</Title>
        <Authors>Pygmalions</Authors>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Description>A library for automatic BSON/JSON snapshot serailization, with built-in support for reference tracking.</Description>
        <PackageProjectUrl>https://github.com/Pygmalions/SnapshotExpert</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Pygmalions/SnapshotExpert</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>Serialization BSON JSON Automated-Serialization Serializer-Generator IL-Emitting</PackageTags>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
            <_Parameter1>SnapshotExpert.Test</_Parameter1>
        </AssemblyAttribute>
    </ItemGroup>

    <ItemGroup>
        <None Include="README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="DocumentationParser" Version="0.1.0"/>
        <PackageReference Include="EmitToolbox" Version="0.3.0-dev11212044" />
        <PackageReference Include="InjectionExpert" Version="0.3.0-dev11212052" />
        <PackageReference Include="MongoDB.Bson" Version="3.5.0" />
    </ItemGroup>

    <Target Name="InjectPackageReleaseNotesFromFile" BeforeTargets="GenerateNuspec" Condition="Exists('RELEASE_NOTE.txt')">
        <PropertyGroup>
            <PackageReleaseNotes>$([System.IO.File]::ReadAllText("$(MSBuildProjectDirectory)/RELEASE_NOTE.txt"))</PackageReleaseNotes>
        </PropertyGroup>
    </Target>
</Project>
